			text: "gorod"
			pos_hint: {"center_x":0.52, "top":0.590}
			size_hint: 0.5, 0.085
		Label:
			font_size: (root.width**2 + root.height**2) /13**4
			text: "Coord: "
			pos_hint: {"center_x":0.36, "top":0.510}
