# coding: utf8
WindowManager:
	MainWindow:
	WeatherWindow:
	InfoWeather:

<MainWindow>:
	name: "main"
	FloatLayout:
		
		orientation: 'vertical'
		Button:
			id: weather
			text: "Погода"
			font_size: (root.width**2 + root.height**2) /13**4 
			pos_hint: {"center_x":0.5, "top":0.65}
			size_hint: 0.3, 0.085
			on_release:
				app.root.current = "weather"		
				root.manager.transition.direction = "left"
		Button:
			id: minigame
			text: "v razrabotke"
			font_size: (root.width**2 + root.height**2) /13**4 
			multiline: False
			password: True
			pos_hint: {"center_x":0.5, "top":0.55}
			size_hint: 0.3, 0.085
			on_release:
				app.root.current = "main"		
				root.manager.transition.direction = "left"
		Button:
			id: info
			name: "info"
			pos_hint: {"center_x":0.5, "y":0.365}
			size_hint: 0.3, 0.085
			font_size: (root.width**2 + root.height**2) /13**4 
			text: "info"
			on_release:
				app.root.current = "info"		
				root.manager.transition.direction = "left"
		Label:
			text: "Version 1.0"
			font_size: (root.width**2 + root.height**2) /14**4
			pos_hint: {"center_x":0.915, "top":0.07}
			size_hint: 0.3, 0.085

<WeatherWindow>:
	name: "weather"
	cityCountry: cityCountry
	search: search
	
	country: country
	city: city
	coord: coord
	clouds: clouds
	pressure: pressure
	humidity: humidity
	wind: wind

	FloatLayout:
		orientation: 'vertical'
		Label:
			font_size: (root.width**2 + root.height**2) /13**4
			text: "Enter the city and country"
			pos_hint: {"center_x":0.5, "top":0.95}
			size_hint: 0.5, 0.085
		TextInput:
			id: cityCountry
			font_size: (root.width**2 + root.height**2) /13**4 
			multiline: False
			pos_hint: {"center_x":0.5, "top":0.85}
			size_hint: 0.5, 0.085
		Button:
			id: search
			text: "Search"
			font_size: (root.width**2 + root.height**2) /13**4 
			pos_hint: {"center_x":0.5, "top":0.75}
			size_hint: 0.3, 0.085
			on_release:
				root.search_info_weather(cityCountry.text)
		Button:
			pos_hint: {"center_x":0.053, "y":0.90}
			size_hint: 0.08, 0.08
			font_size: (root.width**2 + root.height**2) /15**4 
			text: "back"
			on_release:
				app.root.current = "main"		
				root.manager.transition.direction = "right"
		Label:
			font_size: (root.width**2 + root.height**2) /13**4
			text: "Country: "
			pos_hint: {"center_x":0.34, "top":0.670}
			size_hint: 0.5, 0.085
		Label:
