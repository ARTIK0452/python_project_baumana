WindowManager:
	EnterAccountWindow:
	MainWindow:
	
<EnterAccountWindow>:
	name: "enter"
	
	FloatLayout:
		orientation: 'vertical'
		Label:
			text: "number phone:"
			font_size: (root.width**2 + root.height**2) /13**4
			pos_hint: {"center_x":0.190, "top":0.68}
			size_hint: 0.35, 0.15
		TextInput:
			id: phone
			font_size: (root.width**2 + root.height**2) /13**4 
			multiline: False
			pos_hint: {"center_x":0.5, "top":0.65}
			size_hint: 0.3, 0.085
		Label:
			text: "password:"
			font_size: (root.width**2 + root.height**2) /13**4
			pos_hint: {"center_x":0.235, "top":0.58}
			size_hint: 0.35, 0.15
		TextInput:
			id: password
			font_size: (root.width**2 + root.height**2) /13**4 
			multiline: False
			password: True
			pos_hint: {"center_x":0.5, "top":0.55}
			size_hint: 0.3, 0.085
		CheckBox:
			pos_hint: {"center_x":0.7, "top":0.98}
			size_hint: 0.2, 0.045
		Button:
			pos_hint: {"center_x":0.5, "y":0.05}
			size_hint: 0.6, 0.150
			font_size: (root.width**2 + root.height**2) /13**4 
			text: "Login"
			on_release:
				app.root.current = "main"		
				root.manager.transition.direction = "left"

<MainWindow>:
	name: "main"
		Button:
			pos_hint: {"center_x":0.5, "y":0.05}
			size_hint: 0.6, 0.150
			font_size: (root.width**2 + root.height**2) /13**4 
			text: "Login"
			on_release:
				app.root.current = "enter"		
				root.manager.transition.direction = "right"
